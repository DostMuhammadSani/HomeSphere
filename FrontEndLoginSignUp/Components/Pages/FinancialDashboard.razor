@code {
    private string A_id;
    private string token;
    public string role;
    private FinancialSummaryModel summary = new FinancialSummaryModel();
    private int reportsCount = 0;
    private int staffCount = 0;

    // Chart references
    private BarChart barChart = default!;
    private BarChartOptions barChartOptions = default!;
    private ChartData barChartData = default!;

    private DoughnutChart doughnutChart = default!;
    private DoughnutChartOptions doughnutChartOptions = default!;
    private ChartData doughnutChartData = default!;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            token = await SessionStorage.GetItemAsync<string>("authToken");
            var claims = RoleFetch.ParseClaimsFromJwt(token);
            var roleClaim = claims.FirstOrDefault(c => c.Type == ClaimTypes.Role);
            role = roleClaim?.Value;

            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            if (role == "Admin")
            {
                var client = HttpClientFactory.CreateClient("AuthApi");
                var url = $"api/Admin/AdminID?HS_Name={UserService.Username}";
                var response1 = await client.GetAsync(url);

                if (response1.IsSuccessStatusCode)
                {
                    A_id = await response1.Content.ReadAsStringAsync();

                    // Load financial summary
                    var summaryResponse = await client.GetAsync($"api/FinancialReports/Summary?A_id={A_id}");
                    if (summaryResponse.IsSuccessStatusCode)
                    {
                        summary = await summaryResponse.Content.ReadFromJsonAsync<FinancialSummaryModel>();
                    }
                }
            }
            else
            {
                await SessionStorage.RemoveItemAsync("authToken");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing financial dashboard: {ex.Message}");
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && role == "Admin")
        {
            InitializeBarChart();
            InitializeDoughnutChart();
        }
    }

    private void InitializeBarChart()
    {
        var labels = new List<string> { "Income", "Expenses", "Net" };
        var datasets = new List<IChartDataset>();

        var dataset1 = new BarChartDataset()
            {
                Data = new List<double?> {
                (double?)summary.CurrentMonthIncome,
                (double?)summary.CurrentMonthExpenses,
                (double?)summary.CurrentMonthNet
            },
                BackgroundColor = new List<string> {
                "rgba(16, 185, 129, 0.7)", // Green for income
                "rgba(239, 68, 68, 0.7)", // Red for expenses
                summary.CurrentMonthNet >= 0 ? "rgba(16, 185, 129, 0.7)" : "rgba(239, 68, 68, 0.7)" // Green or red for net
            },
                BorderColor = new List<string> {
                "rgba(16, 185, 129, 1)",
                "rgba(239, 68, 68, 1)",
                summary.CurrentMonthNet >= 0 ? "rgba(16, 185, 129, 1)" : "rgba(239, 68, 68, 1)"
            },
                BorderWidth = new List<double> { 1 }
            };
        datasets.Add(dataset1);

        barChartData = new ChartData { Labels = labels, Datasets = datasets };

        barChartOptions = new BarChartOptions();
        barChartOptions.Responsive = true;
        barChartOptions.Interaction = new Interaction { Mode = InteractionMode.Y };
        barChartOptions.IndexAxis = "x";

        barChartOptions.Plugins.Legend.Display = false;
    }

    private void InitializeDoughnutChart()
    {
        // Sample expense categories - replace with actual data from your API
        var labels = new List<string> { "Salaries", "Maintenance", "Utilities", "Supplies", "Other" };
        var backgroundColors = new List<string> {
            "rgba(239, 68, 68, 0.7)",    // Red
