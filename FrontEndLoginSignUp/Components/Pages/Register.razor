@page "/register"
@rendermode InteractiveServer

@using ClassLibraryModel
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory

<EditForm Model="person" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="login-container">
        <img src="login.jpg" alt="Background Image" class="background-image" />
        <div class="login-content">
            <div class="login-left">
                <h1>Welcome</h1>
                <p>To HomeSphere Residencia</p>
            </div>
            <div class="login-right">
                <h2>Register</h2>
                <div class="form-group">
                    <label for="name">Housing Society User Name:</label>
                    <InputText id="name" class="form-control" @bind-Value="person.HS_Name" required />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <InputText id="password" class="form-control" type="password" @bind-Value="person.Passwords" required />
                </div>

                <button type="submit" class="btn btn-primary">Register</button>

                <div class="register-link">
                    <a href="/login">Already have an account? Sign in</a>
                </div>
            </div>
        </div>
    </div>
</EditForm>

<style>
    /* Base Styles */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    a {
        color: white;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #48B7FF;
        }

    /* Login Container */
    .login-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    /* Login Content */
    .login-content {
        display: flex;
        margin-top: 50px;
        border-radius: 10px;
        overflow: hidden;
        width: 80%;
        max-width: 1000px;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    /* Left Section */
    .login-left {
        padding: 40px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-left h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .login-left p {
            font-size: 1.2rem;
            margin-top: 0;
        }

    /* Right Section */
    .login-right {
        padding: 40px;
        flex: 1;
        max-width: 400px;
        background: rgba(0, 0, 0, 0.3);
    }

        .login-right h2 {
            margin-bottom: 30px;
            font-size: 1.8rem;
            text-align: center;
        }

    /* Form Elements */
    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 6px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            outline: none;
            border-color: #0182E7;
        }

    .btn-primary {
        display: block;
        width: 100%;
        padding: 14px;
        background-color: #0182E7;
        border: none;
        border-radius: 6px;
        color: white;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 600;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #48B7FF;
        }

    .register-link {
        text-align: center;
        margin-top: 20px;
        font-size: 0.9rem;
    }

    /* Responsive Styles */
    @@media (max-width: 992px) {
        .login-content {
            width: 90%;
        }
    }

    @@media (max-width: 768px) {
        .login-content {
            flex-direction: column;
            width: 90%;
            max-width: 500px;
        }

        .login-left, .login-right {
            padding: 30px;
            max-width: 100%;
        }

        .login-left {
            text-align: center;
            padding-bottom: 20px;
        }

        .login-right {
            padding-top: 20px;
        }

        .login-left h1 {
            font-size: 2rem;
        }

        .login-left p {
            font-size: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .login-content {
            width: 95%;
        }

        .login-left, .login-right {
            padding: 20px;
        }

            .login-right h2 {
                font-size: 1.5rem;
                margin-bottom: 20px;
            }

        .form-control {
            padding: 10px;
        }

        .btn-primary {
            padding: 12px;
        }
    }

    @@media (max-height: 600px) {
        .login-container {
            align-items: flex-start;
            padding-top: 20px;
        }
    }
</style>

