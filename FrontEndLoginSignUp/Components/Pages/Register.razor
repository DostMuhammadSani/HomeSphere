@page "/register"
@rendermode InteractiveServer

@using ClassLibraryModel
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory

<EditForm Model="person" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="login-container">
        <img src="lo.jpg" alt="Background Image" class="background-image" />
        <div class="login-content">
            <div class="login-left">
                <h1>Welcome to HomeSphere Residencia</h1>
                <p>Register to create an account</p>
              
            </div>
            <div class="login-right">
                <h2>Register</h2>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <InputText id="name" class="form-control" @bind-Value="person.HS_Name"  required/>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <InputText id="password" class="form-control" type="password" @bind-Value="person.Passwords" required />
                </div>

                <button type="submit" class="btn btn-primary">Register</button>

                
            </div>
        </div>
    </div>
</EditForm>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    .login-container {
        position: relative;
        max-width: 100vw; 
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        z-index: -1; /* Ensure the image is behind the content */
    }

    .login-content {
        display: flex;
        flex-direction: row;
        border-radius: 10px;
        overflow: hidden;
        width: 50vw;
        max-width: 800px;
        background: rgba(0, 0, 0, 0.3);
        z-index: 1;
    }

    .login-left, .login-right {
        padding: 40px;
        flex: 1;
    }

    .login-left {
        color: white;
    }

    .login-right {
        color: white;
        max-width: 400px;
    }

    h1, h2 {
        margin-bottom: 30px;
    }

    h2 {
        font-size: 1.8em;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        color: #333;
    }

    .btn-primary {
        display: block;
        width: 100%;
        padding: 12px;
        background-color: #0182E7;
        border: none;
        border-radius: 6px;
        color: white;
        cursor: pointer;
        font-size: 1em;
        margin-top: 10px;
    }

    .btn-primary:hover {
            background-color: #48B7FF;
    }

    .alert-danger {
        margin-top: 20px;
        text-align: center;
    }
</style>
